<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_40dp"
        android:text="平台服务"
        android:layout_marginLeft="@dimen/margin_2"
        android:textSize="@dimen/text_big_x"
        android:textColor="@color/shop_black"
        android:gravity="center_vertical"
        android:background="@color/background_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/company_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="单位入驻"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:drawableTop="@mipmap/unit_logo"
            android:drawablePadding="@dimen/margin_1"
            />

        <TextView
            android:id="@+id/shop_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="商家入驻"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:drawableTop="@mipmap/tenant_logo"
            android:drawablePadding="@dimen/margin_1"
            />


        <TextView
            android:id="@+id/ll_sign"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="活动报名"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:drawableTop="@mipmap/sign_up_logo"
            android:drawablePadding="@dimen/margin_1"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_height_40dp"
        android:text="单位服务"
        android:layout_marginLeft="@dimen/margin_2"
        android:textSize="@dimen/text_big_x"
        android:textColor="@color/shop_black"
        android:gravity="center_vertical"
        android:background="@color/background_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/type_unit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="单位食堂"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:drawableTop="@mipmap/order_unit_logo"
            android:drawablePadding="@dimen/margin_1"
            />

        <TextView
            android:id="@+id/type_tenant"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="商家订餐"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:drawableTop="@mipmap/order_tenant_logo"
            android:drawablePadding="@dimen/margin_1"
            />


        <TextView
            android:id="@+id/type_workers"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="美食坊"
            android:textColor="@color/shop_black"
            android:textSize="@dimen/text_normal"
            android:textStyle="bold"
            android:drawableTop="@mipmap/order_workers_logo"
            android:drawablePadding="@dimen/margin_1"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/background_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/live_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/order_live_logo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生活馆"
                android:textSize="@dimen/text_big_xx"
                android:textColor="@color/shop_black"
                android:layout_marginLeft="@dimen/margin_2"
                />

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/dark_gray"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="@dimen/margin_2"
            />

        <LinearLayout
            android:id="@+id/cook_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/order_cook_logo"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="达人堂"
                android:textSize="@dimen/text_big_xx"
                android:textColor="@color/shop_black"
                android:layout_marginLeft="@dimen/margin_2"
                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>