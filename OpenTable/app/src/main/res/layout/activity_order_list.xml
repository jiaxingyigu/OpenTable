<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yigu.opentable.activity.order.OrderListActivity"
    android:orientation="vertical"
    android:background="@color/divider_line"
    >

    <include
        layout="@layout/lay_header"
        />

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/shop_white"
        android:layout_below="@+id/lay_header"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="center_vertical"
            fresco:fadeDuration="2000"
            fresco:placeholderImage="@mipmap/default_item"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:progressBarAutoRotateInterval="2000"
            fresco:progressBarImage="@mipmap/progress"
            fresco:progressBarImageScaleType="centerInside"
            fresco:retryImageScaleType="centerCrop"
            />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:textColor="@color/shop_black"
            android:text="简介"
            android:ellipsize="end"
            android:maxLines="4"
            android:lineSpacingMultiplier="1.2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/shop_white"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/ll_info"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用餐时间："
            android:textSize="@dimen/text_small"
            android:textColor="@color/shop_black"
            android:layout_marginLeft="12dp"
            />

        <LinearLayout
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@drawable/rect_stroke_round_4_gray__width_1"
            android:gravity="center_vertical"
            android:layout_marginLeft="3dp"
            >

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="2016-08-09"
                android:textSize="@dimen/text_small"
                android:textColor="@color/shop_black"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/date_icon"
                android:paddingRight="7dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@drawable/rect_stroke_round_4_gray__width_1"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tiem_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="早餐"
                android:textSize="@dimen/text_small"
                android:textColor="@color/shop_black"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/down"
                android:paddingRight="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_types"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="@drawable/rect_stroke_round_4_gray__width_1"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/types_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="普通餐"
                android:textSize="@dimen/text_small"
                android:textColor="@color/shop_black"
                android:gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/down"
                android:paddingRight="8dp"
                />

        </LinearLayout>

    </LinearLayout>

    <com.yigu.opentable.widget.BestSwipeRefreshLayout
        android:id="@+id/swipRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_date"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    </com.yigu.opentable.widget.BestSwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/shop_white"
        android:paddingLeft="7dp"
        android:layout_marginRight="7dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/purcase"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="43dp"
            android:text="购物车"
            android:textColor="@color/shop_white"
            android:textSize="@dimen/text_normal"
            android:gravity="center"
            android:background="@drawable/selector_pressed_color_green"
            />

        <TextView
            android:id="@+id/deel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="43dp"
            android:text="结  算"
            android:textColor="@color/shop_white"
            android:textSize="@dimen/text_normal"
            android:layout_marginLeft="@dimen/margin_2"
            android:gravity="center"
            android:background="@drawable/selector_pressed_color_red"
            />

    </LinearLayout>

</RelativeLayout>
